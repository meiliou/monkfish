<div class="card h-100">
    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
        <a href="/restaurants/{{id}}">
        <img src="images/{{name}}.jpg" class="img-fluid restaurant-image" data-restaurant-id="{{id}}" />
        </a>
        {{!-- <a href="#!"> --}}
        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
        </a>
    </div>
    <div class="card-body">
        <h5 class="card-title font-weight-bold"><a>{{name}}</a></h5>
        <ul class="list-unstyled list-inline mb-0">
            <li class="list-inline-item">
                {{convertToStarRating average_rating}}
            </li>
            <li class="list-inline-item">
                {{#if average_rating.length}}
                    <p class="text-muted">{{average_rating}} ({{rating_count}} {{format_plural "rating" rating_count}})</p>
                {{else}}
                    <p class="text-muted">No ratings</p>
                {{/if}}
            </li>
        </ul>
        <p class="mb-2">
            <i class="fas fa-location-dot"></i> â€¢ {{address}}
        </p>
        <p class="card-text">
            {{description}}
        <a href="{{restaurant_url}}" target="_blank">{{restaurant_url}}</a>
        </p>   
        <a href="#!" class="btn btn-link link-secondary p-md-1 mb-0">Details</a>
    </div>
</div>
