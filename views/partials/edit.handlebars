<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Restaurant</title>
</head>
<body>
    {{#if user_role_2}}
    <h1>Edit Restaurant</h1>
    <form action="/edit/{{restaurantId}}" method="POST" enctype="multipart/form-data">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="{{restaurant.name}}" required>
        </div>
        <div>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" value="{{restaurant.address}}" required>
        </div>
        <div>
            <label for="ratings">Ratings:</label>
            <input type="number" id="ratings" name="ratings" min="1" max="5" step="1" value="{{restaurant.ratings}}" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="4" required>{{restaurant.description}}</textarea>
        </div>
        <div>
            <label for="image">Image:</label>
            <input type="file" id="image" name="image" accept="image/*">
        </div>
        <div>
            <button type="submit">Save Changes</button>
        </div>
    </form>
    {{/if}}

    {{#if user_role_1}}
    <h1>Edit Comment</h1>
    <form action="/edit/comment/{{commentId}}" method="POST">
        <div>
            <label for="comment">Comment:</label>
            <textarea id="comment" name="comment" rows="4" required>{{comment}}</textarea>
        </div>
        <div>
            <button type="submit">Save Comment</button>
        </div>
    </form>
    {{/if}}
</body>
</html>
